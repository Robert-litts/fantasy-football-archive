package templates

templ Index() {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Fantasy Football Archive</title>
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>
			<script src="https://cdn.tailwindcss.com"></script>
			<script src="https://unpkg.com/hyperscript.org@0.9.12"></script>
			<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
		</head>
		<body class="flex flex-col min-h-screen bg-gray-900 text-white">
			@Header()
			@Navigation()
			<main
				class="flex-grow container mx-auto px-4 py-8"
				hx-get="/home"
				hx-trigger="load"
			>
				{ children... }
			</main>
			@Footer()
		</body>
	</html>
}

templ Header() {
	<header class="bg-red-600 text-white shadow-lg">
		<div class="container mx-auto px-4 py-4">
			<h1 class="text-2xl font-bold">Fantasy Football Archive</h1>
		</div>
	</header>
}

templ Navigation() {
	<nav class="bg-gray-800 shadow">
		<div class="container mx-auto px-4">
			<ul class="flex space-x-6 py-3">
				<li style="float:right">
					<a
						hx-get="/home"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Home
					</a>
				</li>
				<li>
					<a
						hx-get="/leagues"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Leagues
					</a>
				</li>
				<li>
					<a
						hx-get="/teams"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Teams
					</a>
				</li>
				<li>
					<a
						hx-get="/matchups"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Matchups
					</a>
				</li>
				<li>
					<a
						hx-get="/drafts"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Drafts
					</a>
				</li>
				<li>
					<a
						hx-get="/stats"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Stats
					</a>
				</li>
				<li>
					<a
						hx-get="/rules"
						hx-target="main"
						class="hover:text-blue-600 cursor-pointer"
					>
						Rules
					</a>
				</li>
			</ul>
		</div>
	</nav>
}

templ Footer() {
	<footer class="bg-gray-800 text-white mt-auto">
		<div class="container mx-auto px-4 py-4 text-center">
			<p>Â© 2025 Fantasy Football Archive, R. Litts</p>
		</div>
	</footer>
}
